@article{Melaku201797,
  title = {Association between Nutrient Patterns and Bone Mineral Density among Ageing Adults},
  author = {Melaku, Y.A. and Gill, T.K. and Taylor, A.W. and Adams, R. and Shi, Z.},
  year = {2017},
  journal = {Clinical Nutrition ESPEN},
  volume = {22},
  pages = {97--106},
  doi = {10.1016/j.clnesp.2017.08.001},
  abstract = {Background and aim There is limited evidence on the link between the overall nutrients intake from diet and bone mineral density (BMD). We assessed the association between nutrient patterns and BMD among an ageing Australian population. Methods Participants (n = 1135; males, 45.8\%; median age, 62.0 years) with dietary and BMD data in the North West Adelaide Health Study (NWAHS) were included. Dietary intake was assessed using a food frequency questionnaire. BMD was measured using dual-energy X-ray absorptiometry. Nutrient patterns were identified by factor analysis. Linear regression analyses were conducted to assess the association between nutrient patterns and BMD (mg/cm 2 ). Multiple imputation and sensitivity analyses were conducted to investigate the effect of missing data on the estimates. Results Three nutrient patterns (mixed-source [potassium, calcium, fibre, retinol and Vitamin B 12 ], animal-sourced [cholesterol, protein, Vitamin B 12 and fat] and plant-sourced [fibre, carotene, vitamin C and Lutein]) were identified. After adjusting for socio-demographic, lifestyle and behavioural characteristics, chronic conditions and energy intake, animal ({$\beta$} = -4.07; 95\% confidence interval (CI): -11.89, 3.76) and plant-sourced ({$\beta$} = -0.99; 95\% CI: -7.43, 5.45) patterns were not associated with BMD. However, we found that the mixed-source pattern was positively associated with BMD ({$\beta$} = 10.86; 95\% CI: 1.91, 19.80). We did not find interactions between the pattern, other covariates and BMD. The multiple imputation and sensitivity analyses including missing data identified similar patterns of association between nutrient patterns and BMD. Conclusions Whereas animal- and plant-sourced nutrient patterns are not associated with BMD, mixed-source pattern may have benefit in prevention of reduced BMD. \textcopyright{} 2017 European Society for Clinical Nutrition and Metabolism},
  affiliation = {Adelaide Medical School, The University of Adelaide, SAHMRI, Adelaide, SA 5005, Australia; Health Observatory, Discipline of Medicine, The Queen Elizabeth Hospital Campus, The University of Adelaide, Adelaide, SA 5011, Australia},
  keywords = {Ageing population; Bone mineral density; Nutrient patterns},
  document_type = {Article},
  source = {Scopus}
}

@article{Muldoon2003,
  title = {Femoral Neck Stress Fractures and Metabolic Bone Disease},
  author = {Muldoon, M.P. and Padgett, D.E. and Sweet, D.E. and Deuster, P.A. and Mack, G.R.},
