@article{García-Manzanares2011163,
  title = {Nutritional and Dietary Aspects of Celiac Disease},
  author = {{Garc{\'i}a-Manzanares}, {\'A}. and Lucendo, A.J.},
  year = {2011},
  journal = {Nutrition in Clinical Practice},
